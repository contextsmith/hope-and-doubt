#!/bin/bash

HOPE='src/main/java/com/martiansoftware/validation/Hope.java'
DOUBT='src/main/java/com/martiansoftware/validation/Doubt.java'

cat > "${DOUBT}" <<EOF
// THIS FILE IS AUTOMATICALLY GENERATED - DO NOT EDIT
// SEE THE generateDoubt SCRIPT IN THE TOP LEVEL SOURCE FOLDER
EOF

cat "${HOPE}" | \
	sed -e 's/Hope/Doubt/g' \
	    -e 's/UncheckedValidationException/CheckedValidationException/g' \
	    -e 's/Optimistic/Pessimistic/g' \
	    -e 's/optimistic/pessimistic/g' >> "${DOUBT}"
	    
